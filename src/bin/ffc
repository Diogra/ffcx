#!/usr/bin/env python

# Copyright (c) 2004 Anders Logg (logg@tti-c.org)
# Licensed under the GNU GPL Version 2
#
# This script parses command-line arguments, calls
# the parser, and then compiles the generated form.
#
# 2004-10-14 -- 2005-05-04

FFC_VERSION = "0.1.7"

# Python modules
import sys
import getopt

# FFC modules
sys.path.append("../")
from ffc.parser import simple

def main(argv):
    "Main function."

    # Get command-line arguments
    try:
        opts, args = getopt.getopt(argv, "hl:c:", ["help", "language=", "license="])
    except getopt.GetoptError:
        usage()
        sys.exit(2)

    # Check that we got a filename
    if not args:
        usage()
        sys.exit(2)

    print opts, args

    # Print a nice message
    print "This is FFC, the FEniCS Form Compiler, version %s." % FFC_VERSION
    print "For further information, go to http://www/fenics.org/ffc/."
    print

    # Set default arguments
    language = "C++"
    license = "GNU GPL Version 2"

    print "language = " + str(language)

    # Get options
    for opt, arg in opts:
        print opt, arg
        if opt in ("-h", "--help"):
            usage()
            sys.exit()
        elif opt in  ("-l", "--language"):
            language = arg
        elif opt in  ("-c", "--license"):
            license = arg

    # Call parser and compiler for each file
    for filename in args:
        # Parse current file
        outname = simple.parse(filename, FFC_VERSION, language, license)
        # Compile generated file
        print "outname = " + outname
        execfile(outname)

def usage():
    "Display usage info."
    print """\
Usage: ffc [OPTION]... input.form

  -h            display this help and exit
  -l language   specify output language (default is C++)
  -c license    specify license of generated code (default is GPL)
  

Alternatively, the following long options may be used:

  --help
  --language language
  --license  license

Currently supported languages are C++ and LaTeX."""
    return

if __name__ == "__main__":
    main(sys.argv[1:])
